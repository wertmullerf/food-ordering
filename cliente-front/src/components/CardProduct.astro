---
const data = Astro.props.data || {}; // Asegura que data siempre exista
const { nombre = "Producto", precio = 0, imageUrl = "" } = data;
---

<a href="" class="card-link">
  <div
    class="mb-3 d-flex align-items-center p-3"
    style="max-width: 600px; border-radius: 10px;"
  >
    <div class="row g-0 w-100">
      <!-- Imagen -->
      <div class="col-md-3 d-flex justify-content-center align-items-center">
        <img
          src={`http://localhost:3000${imageUrl}`}
          class="img-fluid rounded"
          alt={nombre}
          style="width: 80px; height: 80px; object-fit: cover;"
        />
      </div>

      <!-- Información -->
      <div class="col-md-9 ps-3 d-flex flex-column justify-content-center">
        <div class="d-flex justify-content-between align-items-center">
          <!-- Nombre del producto -->
          <h5 class="card-title text-white fw-bold m-0">{nombre}</h5>

          <!-- Precio -->
          <span class="text-white fw-bold" style="font-size: 1.2rem;">
            ${precio?.toLocaleString("es-AR") || "0"}
          </span>
        </div>

        <!-- Descripción -->
        <p class="card-text text-secondary m-0" style="font-size: 0.9rem;">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Id sint quod
          debitis enim corporis
        </p>

        <!-- Etiqueta de Promoción -->
        <span
          class="badge bg-danger text-uppercase mt-2"
          style="font-size: 0.85rem; padding: 6px 12px; border-radius: 5px; "
        >
          ¡Promoción!
        </span>
      </div>
    </div>
  </div>
</a>

<style>
  .card-link {
    all: unset; /* Elimina TODOS los estilos heredados */
    display: block; /* Para mantener el tamaño del div */
    width: 100%;
    cursor: pointer;
  }
</style>
